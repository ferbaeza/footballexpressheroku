<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">

    <title>Edit</title>
</head>
<body>
    <div class="container is-max-widescreen">
        <div class="notification is-primary">
            <h2 class="subtitle">Edit Player</h2>
        </div>

    <h1>Edit Players</h1>
    <form action="/players/<%= player.id%>?_method=PUT" method="POST">
        <div class="field">
            <label class="label is-medium">Name</label>
            <div class="control has-icons-left has-icons-right">
              <input class="input is-medium"type="text" name="name" placeholder="Name" value=" <%= player.name %>">
              <span class="icon is-small is-left">
                <i class="fas fa-envelope fa-xs"></i>
              </span>
              <span class="icon is-small is-right">
                <i class="fas fa-check fa-xs"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label is-medium">Surname</label>
            <div class="control has-icons-left has-icons-right">
              <input class="input is-medium"type="text" name="surname" placeholder="Surname" value=" <%= player.surname %>">
              <span class="icon is-small is-left">
                <i class="fas fa-envelope fa-xs"></i>
              </span>
              <span class="icon is-small is-right">
                <i class="fas fa-check fa-xs"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label is-medium">Age</label>
            <div class="control has-icons-left has-icons-right">
              <input class="input is-medium" type="number" name="age" placeholder="Age of Player" value=" <%= player.age %>">
              <span class="icon is-small is-left">
                <i class="fas fa-envelope fa-xs"></i>
              </span>
              <span class="icon is-small is-right">
                <i class="fas fa-check fa-xs"></i>
              </span>
            </div>
          </div>

        
        
        <div class="control">
            <div class="select">
                <select name="position">
                <% for (let pos of positions) { %>
                    <option value="<%=pos%>"
                        <%= player.position === pos ? 'selected' : '' %>
                        ><%=pos.toUpperCase()%></option>
                <% } %>
                </select>
            </div>
        </div>
        <div class="control">
            <div class="select">
                <select name="team">
                    <% for (let te of teams) { %>
                        <option value="<%=te%>"
                            <%= player.team === te ? 'selected' : '' %>
                            ><%=te.toUpperCase()%></option>
                       <% } %>
                </select>
            </div>
        </div>

        <div class="control mt-3">
            <button class="button is-primary">Submit</button>
        </div>
        <div class="control mt-3">
            <a href="/players/<%= player.id %>">
                <button class="button is-dark">Cancel</button>
            </a>
        </div>
    </form>
    <div class="control mt-5">
        <form method="POST" action="/players/<%=player._id%>?_method=DELETE">
            <button class="button is-danger">Delete</button>
        </form>
    </div>

    </div>
</body>
</html>